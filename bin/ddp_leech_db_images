def read_lines(files):
    lines = []
    for file in files:            
        with open(file, mode="r") as current:
            result = current.readlines()
            lines.append(result)
            print(result)
            print(type(result))        
    pprint(lines)
    megalist = list(chain(*lines)) # dont know why but this does some wild stuff with some urls; think whitespace is at fault
    pprint(megalist)
    return megalist

